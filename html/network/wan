<script type="text/javascript"><!--//
(function($) {$(function() {
// on load stuff goes here

// set up show/hide for address methods based on address_method.changed
function address_method_change() {
	$("#id_wan_address_method").change(function() {
		var val = $(this).val();
		$.post("/network/wan", {subform:1, wan_address_method:val}, function(data, textStatus) {
			$("#network-wan-form").replaceWith(data);
			address_method_change();
		});
	});
}
address_method_change();

}); })(jQuery);
//--!>
</script>

